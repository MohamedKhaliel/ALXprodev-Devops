#!/usr/bin/env python3
import requests
import time
import os
import json

# List of Pokémon to fetch
pokemon_list = ["bulbasaur", "ivysaur", "venusaur", "charmander", "charmeleon"]

# Create output directory if not exists
output_dir = "pokemon_data"
os.makedirs(output_dir, exist_ok=True)

for pokemon in pokemon_list:
    print(f"Fetching data for {pokemon}...")
    try:
        response = requests.get(f"https://pokeapi.co/api/v2/pokemon/{pokemon.lower()}")
        response.raise_for_status()  # Raises error for HTTP errors
        data = response.json()

        # Save to JSON file
        file_path = os.path.join(output_dir, f"{pokemon.lower()}.json")
        with open(file_path, "w") as f:
            json.dump(data, f, indent=2)

        print(f"Saved data to {file_path} ✅")

    except requests.exceptions.RequestException as e:
