#!/bin/bash

output_file="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Loop through JSON files and extract data
for file in *.json; do
    name=$(jq -r '.name' "$file" | sed 's/\b\(.\)/\u\1/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert height to meters and weight to kg
    height_m=$(awk "BEGIN {printf \"%.2f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    echo "$name,$height_m,$weight_kg" >> "$output_file"
done

# Display CSV location
echo "CSV Report generated at: $output_file"
echo ""

# Show CSV content
cat "$output_file"
echo ""

# Calculate averages
awk -F, 'NR>1 {sum_h+=$2; sum_w+=$3; count++}
END {
    printf "Average Height: %.2f m\n", sum_h/count
    printf "Average Weight: %.2f kg\n", sum_w/count
}' "$output_file"
